set nocompatible

call plug#begin('~/.vim/plugged')
    Plug 'tpope/vim-sensible'
call plug#end()

set expandtab
set noshowmatch
set hlsearch
set clipboard=unnamed
set tabstop=4
set shiftwidth=4
set hidden
set splitbelow
set splitright
set nobackup
set nowritebackup
set noswapfile

inoremap jj <ESC>
nnoremap <C-j> :bnext<CR>
nnoremap <C-k> :bprev<CR>
